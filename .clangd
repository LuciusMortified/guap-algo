CompileFlags:
  Add:
    - -std=c++23
    - -Wall
    - -Wextra
    - -Wpedantic
    - -Iengine/include
    - -Ibuild/vcpkg_installed/x64-windows/include
    - -DDEBUG
    - -D_WIN32
    - -D_WIN64

Index:
  Background: Build
  StandardLibrary: Yes

InlayHints:
  Enabled: Yes
  ParameterNames: Yes
  DeducedTypes: Yes

Hover:
  ShowAKA: Yes

Diagnostics:
  ClangTidy:
    Add:
      - readability-*
      - performance-*
      - modernize-*
      - bugprone-*
    Remove:
      - readability-magic-numbers
      - readability-uppercase-literal-suffix
      - readability-identifier-length
      - bugprone-easily-swappable-parameters

  UnusedIncludes: None
  MissingIncludes: None

Completion:
  AllScopes: Yes
